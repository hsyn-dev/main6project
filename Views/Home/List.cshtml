@model IEnumerable<main6project.Models.Maintable>

@{
    ViewData["Title"] = "List";
}
@{
     
}



<h1> <b>
        Main list
</b></h1>

<p>
    <a asp-action="Create" class="bg-black text-white">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                        Image 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    
                    <img src="~/Images/@item.ImageName" class="image60" >
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="bg-primary text-white">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="bg-warning text-white">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id " class="bg-danger text-white">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
